<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /kubatapp/

    # Allow existing files and directories (API, assets) to resolve normally
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Fallback: serve static frontend files from the app/ directory
    RewriteRule ^(.+)$ app/$1 [L]
</IfModule>